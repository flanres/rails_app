<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :search_name %>
      <%= f.text_field :search_name, class: 'form-control' %>

      <%= f.submit "Search Account", class: "btn btn-brack" %>
    <% end %>
  </div>
</div>

<ul class="users">
  <%= render @users %>
</ul>
<%= paginate @users %>