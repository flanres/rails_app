<span class="like">
  <% if video.good?(current_user) %>
    <%= form_for(video.likes.find_by(user_id: current_user.id), method: :delete, remote: true, url: likes_path) do |f| %>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <%= content_tag :span, "そうでもない", class: "glyphicon glyphicon-heart" %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(video.likes.build, remote: true, url: {controller: "likes", action: "create" }) do |f| %>
      <div><%= hidden_field_tag :video_id, video.id %></div>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <%= content_tag :span, "いいね", class: "glyphicon glyphicon-heart-empty" %>
      <% end %>
    <% end %>
  <% end %>
</span>