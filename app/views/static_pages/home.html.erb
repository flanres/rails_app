<div class="center jumbotron">
  <h1>Welcome to Pool Hub</h1>

  <h2>
    Tpic Pool Movie
  </h2>

  <%= link_to "Create Account", signup_path, class: "btn btn-black" %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h3>New Videos</h3>
    <ul>
      <%#= @videos.each do |video| %>
      <%= for video_index in 0..@videos.length - 1 do %>
        <li>
          <%= image_tag(@videos[video_index].thumbnail_img) %>
          <%= link_to @videos[video_index].title, @videos[video_index].url %>
          <%= @videos[video_index].description %>
        </li>
      <% end %>
    </ul>
  </div>
</div>